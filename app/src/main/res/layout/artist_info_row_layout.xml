<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/artist_row_layout_padding">

    <TextView
        android:id="@+id/artistNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taylor Swift"
        android:textSize="@dimen/artist_text_size"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/trackNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You Belong to Me"
        android:textSize="@dimen/artist_text_size"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/releaseDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16/06/2020"
        android:textSize="@dimen/artist_text_size"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/trackPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$16"
        android:textSize="@dimen/artist_text_size"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/genreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pop Rock"
        android:textSize="@dimen/artist_text_size"
        android:textColor="@color/black"/>
</LinearLayout>